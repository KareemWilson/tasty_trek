<h1>General Shopping List</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Food Item</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <% @missing_food_list.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= number_to_currency(food.price) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>Total Missing Items: <%= @total_missing_items %></p>
<p>Total Missing Price: <%= number_to_currency(@total_missing_price) %></p> 