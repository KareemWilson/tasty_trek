<div class='recipe-card d-flex flex-column justify-content-around py-3 mt-5 mb-5'>
    <div class='d-flex flex-row justify-content-around align-items-baseline'>
        <%= link_to recipe.name, recipe_path(recipe), class: 'recipe-title'%>
        <p class='placeholder w-50'><%= recipe.description%></p>
    </div>
    <div class='d-flex justify-content-start recipe-card-options'>
            <% if can? :destroy, recipe%>
                <%= button_to recipe_path(recipe.id), method: :delete, data: { confirm: "Are you sure you want to delete this recipe?" }, class: 'btn btn-danger' do %>
                    Delete
                <% end %>
            <%end%>
            <%# <p class='text-primary'>This Recipe By: <%= recipe.user.name%>
        </div>
</div>