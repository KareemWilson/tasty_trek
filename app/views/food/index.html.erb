<div>
  <h1>Food page</h1>
</div><br />
<%= link_to "Add food", new_food_path %> 
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th scope="col">Food</th>
      <th scope="col">Measurement Unit</th>
      <th scope="col">Unit Price</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%=food.name%></td>
        <td><%=food.measurement_unit%></td>
        <td><%=food.price%></td>
        <td>
          <%= button_to food_path(food), method: :delete, data: { confirm: "Are you sure?" } do %>
            Delete
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
